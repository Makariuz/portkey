<h1> All Posts </h1>

<div class="container">

   <% post.forEach(post => { %>  
    <div class="card-post">
        <h2> <%=  post.title  %>  </h2>
        <p> <%= post.content.substr(0, 100) %>... <a href="/post/read/<%= post.id %> "> Read more </a> </p>
        <% if(post.picture) { %>
            <img src="" alt="">
        <% } %>

    </div>
   <% })  %> 

</div>